<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="20dp"
                android:height="20dp" />
            <solid android:color="#37000000" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="0dp"
        android:right="1dp">
        <shape android:shape="oval">
            <size
                android:width="20dp"
                android:height="20dp" />
            <solid android:color="?attr/surfaceColor" />
        </shape>
    </item>

    <item
        android:bottom="2.8dp"
        android:left="2dp"
        android:right="2.8dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="?attr/primaryColor" />
        </shape>
    </item>
</layer-list>