<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:layout_marginEnd="12dp"
    android:orientation="vertical">

    <!--
    ==== NO MORE VALID ====
     Background is a 9 patch image with
     content area: 64px x 64px
     actual size: 100px x 100px
     rounding radius: 18
     //Light version
     shadow blur: 12, x offset: 6 and y offset:6
     shadow color: #757575, opacity: 55%

     //Dark version
     shadow blur: 12, x offset: 6 and y offset:6
     shadow color: #000000, opacity: 100%
     -->
    <ImageView
        android:id="@+id/home_rv_list_item_album_art"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:ignore="contentDescription"
        tools:src="@tools:sample/avatars" />

    <include layout="@layout/rv_home_item_title_text_view" />

    <include layout="@layout/rv_home_item_sub_text_view" />

</LinearLayout>