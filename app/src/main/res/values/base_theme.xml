<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <item name="android:windowAnimationStyle">@style/WindowTransitions</item>
    </style>

    <style name="WindowTransitions" parent="@android:style/Animation.Activity">
        <!-- Animations for entering activity and closing activity
        when new activity is opened on top of current-->
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>

        <!-- Animations for entering activity and closing activity
        when old activity comes in foreground and current activity exits-->
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <!-- Base Theme for NoActionBar style -->
    <style name="AppTheme.NoActionBarBase">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- <item name="android:windowTranslucentNavigation">true</item> -->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.NoActionBarBase">
        <item name="android:textColorHint">?disabledTextColor
        </item> <!-- Defines the searchView hint textColor -->
        <item name="android:editTextColor">?primaryTextColor
        </item> <!-- Defines the searchView entered textColor -->
        <item name="android:textColorSecondary">?focusedDrawableColor
        </item> <!-- Defines the toolbar options menu icon color -->
    </style>

    <!-- Base Activity theme for Light UI -->
    <style name="AppTheme.NoActionBar.LightMode">
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorPrimaryDark">@color/color_primary_variant_light</item>
        <item name="colorAccent">@color/secondary_color_light</item>
        <item name="secondaryColor">@color/secondary_color_light</item>
        <item name="colorOnSecondary">@color/on_secondary_light</item>

        <item name="primaryTextColor">@color/primary_text_light</item>
        <item name="secondaryTextColor">@color/secondary_text_light</item>
        <item name="disabledTextColor">@color/disabled_text_light</item>

        <item name="windowBackgroundColor">@color/window_background_light</item>

        <item name="unFocusedDrawableColor">@color/unfocused_drawable_light</item>
        <item name="focusedDrawableColor">@color/focused_drawable_light</item>
        <item name="selectedItemBackground">?attr/secondaryColor</item>
        <item name="dividerColor">@color/divider_color_light</item>
        <item name="iconOptions">@drawable/ic_options_light</item>
        <item name="elevatedSurfaceColor">@color/elevated_surface_light</item>

        <item name="isLightMode">true</item>
        <item name="imageElevationShadow">@drawable/iv_shadow_light</item>

        <item name="overlayColor">#14000000</item>
    </style>

    <!-- Base Activity theme for Dark UI -->
    <style name="AppTheme.NoActionBar.DarkMode">
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryDark">@color/color_primary_variant_dark</item>
        <item name="colorAccent">@color/secondary_color_dark</item>
        <item name="secondaryColor">@color/secondary_color_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>

        <item name="primaryTextColor">@color/primary_text_dark</item>
        <item name="secondaryTextColor">@color/secondary_text_dark</item>
        <item name="disabledTextColor">@color/disabled_text_dark</item>

        <item name="windowBackgroundColor">@color/window_background_dark</item>

        <item name="unFocusedDrawableColor">@color/unfocused_drawable_dark</item>
        <item name="focusedDrawableColor">@color/focused_drawable_dark</item>
        <item name="selectedItemBackground">?attr/secondaryColor</item>
        <item name="dividerColor">@color/divider_color_dark</item>
        <item name="iconOptions">@drawable/ic_options_dark</item>
        <item name="elevatedSurfaceColor">@color/elevated_surface_dark</item>

        <item name="isLightMode">false</item>
        <item name="imageElevationShadow">@drawable/iv_shadow_dark</item>

        <item name="overlayColor">#14FFFFFF</item>
    </style>

    <!-- Base Activity theme for Light UI -->
    <style name="AppTheme.NoActionBar.LightMode.BlackWhite">
        <item name="colorAccent">@color/secondary_color_black_white</item>
        <item name="secondaryColor">@color/secondary_color_black_white</item>
        <item name="colorOnSecondary">@color/on_secondary_black_white</item>
    </style>

    <style name="AppTheme.NoActionBar.DarkMode.Kinda">
        <item name="android:windowBackground">@color/window_background_kinda_dark</item>
        <item name="colorPrimary">@color/color_primary_kinda_dark</item>
        <item name="colorPrimaryDark">@color/color_primary_variant_kinda_dark</item>
        <item name="windowBackgroundColor">@color/window_background_kinda_dark</item>
        <item name="elevatedSurfaceColor">@color/elevated_surface_kinda_dark</item>
    </style>

    <style name="AppTheme.NoActionBar.LightMode.SweetMorning">
        <item name="colorAccent">@color/secondary_color_sweet_white</item>
        <item name="secondaryColor">@color/secondary_color_sweet_white</item>
        <item name="colorOnSecondary">@color/on_secondary_sweet_white</item>
    </style>

    <style name="AppTheme.NoActionBar.DarkMode.Charcoal">
        <item name="android:windowBackground">@color/window_background_charcoal_dark</item>
        <item name="colorPrimary">@color/color_primary_charcoal_dark</item>
        <item name="colorPrimaryDark">@color/color_primary_variant_charcoal_dark</item>
        <item name="colorAccent">@color/secondary_color_charcoal_dark</item>
        <item name="secondaryColor">@color/secondary_color_charcoal_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_charcoal_dark</item>
        <item name="windowBackgroundColor">@color/window_background_charcoal_dark</item>
        <item name="elevatedSurfaceColor">@color/elevated_surface_charcoal_dark</item>
    </style>

</resources>