<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="18dp">

    <FrameLayout
        android:id="@+id/grid_item_artist_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bck_item_artist"
        android:padding="32dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/grid_item_artist_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/iv_content_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_artist_art" />
    </FrameLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/grid_item_artist_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textAppearance="@style/TextViewSubtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_item_artist_frame"
        tools:text="@tools:sample/lorem/random" />
</androidx.constraintlayout.widget.ConstraintLayout>