<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="0dp">

    <ImageView
        android:id="@+id/grid_item_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?imageViewBackgroundDrawable"
        android:contentDescription="@string/iv_content_desc"
        android:padding="@dimen/bck_iv_sh_src_padding"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grid_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textAppearance="@style/ItemTitleTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_item_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>