<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ********************************************* -->
    <!-- *********** COLORS FOR LIGHT MODE *********** -->
    <color name="color_primary_light">@color/window_background_light</color>
    <!-- For a flat ui design status bar and window background must be same -->
    <color name="color_primary_variant_light">@color/window_background_light</color>


    <color name="secondary_color_light">@color/purple</color>
    <!-- Color that appear over secondary -->
    <color name="on_secondary_light">@color/md_white</color>


    <color name="window_background_light">@color/md_white</color>
    <!--Primary Color that appears over background color -->
    <color name="primary_color_on_background_light">@color/md_grey_900</color>
    <!--Secondary Color that appears over background color -->
    <color name="secondary_color_on_background_light">@color/md_grey_600</color>


    <!--  For light theme elevation shadow is dark so the surface color can be same as window background -->
    <color name="surface_color_light">@color/window_background_light</color>
    <!--Color that appears over surface -->
    <color name="color_on_surface_light">@color/primary_color_on_background_light</color>


    <color name="unfocused_drawable_light">@color/md_grey_700</color>
    <color name="focused_drawable_light">@color/color_on_surface_light</color>


    <color name="color_stroke_light">@color/md_grey_200</color>


    <!-- High-emphasis text opacity of 87% -->
    <color name="primary_text_light">@color/primary_color_on_background_light</color>

    <!-- Medium-emphasis text opacity of 54% -->
    <color name="secondary_text_light">@color/secondary_color_on_background_light</color>

    <!-- Disabled/Hint text opacity of 38% -->
    <color name="disabled_text_light">@color/md_grey_400</color>




    <!-- ********************************************* -->
    <!-- ************ COLORS FOR DARK MODE *********** -->

    <color name="color_primary_dark">@color/window_background_dark</color>
    <!-- For a flat ui design status bar and window background must be same -->
    <color name="color_primary_variant_dark">@color/window_background_dark</color>


    <color name="secondary_color_dark">@color/purple_dark</color>
    <!-- Color that appear over secondary -->
    <color name="on_secondary_dark">@color/md_grey_900</color>


    <!-- material design dark theme recommended background -->
    <color name="window_background_dark">@color/md_grey_900</color>
    <!--Primary Color that appears over background color -->
    <color name="primary_color_on_background_dark">@color/md_grey_50</color>
    <!--Secondary Color that appears over background color -->
    <color name="secondary_color_on_background_dark">@color/md_grey_500</color>


    <!--  For dark theme shadow is dark so use a light surface color to show elevation-->
    <color name="surface_color_dark">@color/md_grey_800</color>
    <!--Color that appears over surface -->
    <color name="color_on_surface_dark">@color/md_blue_grey_50</color>


    <color name="unfocused_drawable_dark">@color/md_grey_400</color>
    <color name="focused_drawable_dark">@color/color_on_surface_dark</color>


    <color name="color_stroke_dark">@color/md_grey_800</color>

    <!-- High-emphasis text opacity of 90% -->
    <color name="primary_text_dark">@color/primary_color_on_background_dark</color>

    <!-- Medium-emphasis text opacity of 70% -->
    <color name="secondary_text_dark">@color/secondary_color_on_background_dark</color>

    <!-- Low-emphasis/Disabled/Hint text opacity of 50% -->
    <color name="disabled_text_dark">@color/md_grey_600</color>




    <!-- ******************************************************** -->
    <!-- ************ COLORS FOR BRIGHT MORNING MODE ************

    <color name="secondary_color_black_white">@color/user_icon_6</color>

    <!- Color that appear over secondary
    <color name="on_secondary_black_white">#FFFFFF</color> -->




    <!-- ******************************************************** -->
    <!-- ***************** COLORS FOR KINDA MODE **************** -->

    <!-- To create branded dark surfaces, overlay the primary
    brand color at a low opacity over the recommended dark theme
    surface color (#121212). The color #1F1B24 -->
    <color name="window_background_kinda_dark">#1F1B24</color>

    <!--4dp elevated surface 9% alpha over white -->
    <color name="surface_color_kinda_dark">#36323B</color>

    <color name="color_primary_kinda_dark">@color/window_background_kinda_dark</color>

    <!-- For a flat ui design status bar and window background must be same -->
    <color name="color_primary_variant_kinda_dark">@color/window_background_kinda_dark</color>




    <!-- ******************************************************** -->
    <!-- ************ COLORS FOR SWEET MORNING ******************
    <color name="secondary_color_sweet_white">@color/user_icon_8</color>

    <!- Color that appear over secondary
    <color name="on_secondary_sweet_white">#FFFFFF</color> -->




    <!-- ******************************************************** -->
    <!-- *************** COLORS FOR CHARCOAL ******************** -->
    <color name="color_primary_black_dark">@color/window_background_black_dark</color>

    <!-- For a flat ui design status bar and window background must be same -->
    <color name="color_primary_variant_black_dark">@color/window_background_black_dark</color>

    <color name="window_background_black_dark">#000000</color>

    <!-- <color name="secondary_color_black_dark">#FFAB40</color> -->

    <!-- Color that appear over secondary -->
    <color name="on_secondary_black_dark">#202020</color>

    <!--4dp elevated surface 10% alpha over white -->
    <color name="surface_color_black_dark">#202020</color>

</resources>
